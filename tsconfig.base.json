{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@actapi.js/common": ["@actapi.js/common/src/index.ts"],
			"@actapi.js/core": ["@actapi.js/core/src/index.ts"]
		}
	}
}
